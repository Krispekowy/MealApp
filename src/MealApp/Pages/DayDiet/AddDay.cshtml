@page "{dietId}"
@model MealApp.Pages.DayDiet.AddDayModel
@{
}
<h1>Dodawanie dnia diety</h1>

<form method="post" class="mt-3">
    <input asp-for="@Model.Day.DietId" type="hidden" />
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <label asp-for="@Model.Day.Name" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            @Html.TextBoxFor(a => a.Day.Name, new { @class = "form-control" })
            <span asp-validation-for="Day.Name" class="text-danger"></span>
        </div>
        
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">I śniadanie</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(p => p.Day.Breakfast, Model.Breakfast, "--Wybierz I śniadanie--", new { @class = "form-control" })
            <span asp-validation-for="Day.Breakfast" class="text-danger"></span>
        </div>
        
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">II śniadanie</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(p => p.Day.Brunch, Model.Brunch, "--Wybierz II śniadanie--", new { @class = "form-control" })
            <span asp-validation-for="Day.Brunch" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Obiad</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(p => p.Day.Lunch, Model.Lunch, "--Wybierz obiad--", new { @class = "form-control" })
            <span asp-validation-for="Day.Lunch" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Podwieczorek</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(p => p.Day.Tea, Model.Tea, "--Wybierz podwieczorek--", new { @class = "form-control" })
            <span asp-validation-for="Day.Tea" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Kolacja</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(p => p.Day.Dinner, Model.Dinner, "--Wybierz kolację--", new { @class = "form-control" })
            <span asp-validation-for="Day.Dinner" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Utwórz dzień diety</button>
            <a href='javascript:history.go(-1)' class="btn btn-danger">Wróć do przeglądu diety</a>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="~/Pages/Shared/_ValidationScriptsPartial.cshtml" />
}