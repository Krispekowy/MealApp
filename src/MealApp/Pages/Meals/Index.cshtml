@page
@model MealApp.Pages.Meals.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Posiłki</h1>

<div class="form-group row">
    <div class="col-sm-10">
        <a asp-page="/Meals/Add" class="btn btn-primary">Dodaj nowy</a>
    </div>
</div>
<div class="card-deck">
    @foreach (var meal in Model.MealsDTO)
    {
        <input type="hidden" asp-for="@meal.Id" />
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h5>@meal.MealName</h5>
            </div>
            <div class="card-body">
                <h6>Przepis:</h6>
                <p>@meal.Description</p>
                <h6>Ilość kalorii: @meal.Kcal</h6>
            </div>
            <div class="card-footer text-center">
                <div class="row">
                    <a asp-page="/Meals/Edit" asp-route-Id="@meal.Id" class="btn btn-primary m-1">Edytuj</a>
                    <a asp-page="/Meals/Delete" asp-route-Id="@meal.Id" class="btn btn-danger m-1">Usuń</a>
                </div>
            </div>
        </div>
    }
</div>

