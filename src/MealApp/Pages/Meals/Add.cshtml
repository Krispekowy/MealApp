@page
@model MealApp.Pages.Meals.AddModel
@{
}
<h1>Dodaj posiłek</h1>

<form method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="MealDTO.MealName" class="col-sm-2 col-form-label">
            Nazwa
        </label>
        <div class="col-sm-4">
            <input asp-for="MealDTO.MealName" class="form-control" placeholder="Wprowadź nazwę">
            <span asp-validation-for="MealDTO.MealName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MealDTO.TypeOfMealId" class="col-sm-2 col-form-label">
            Typ
        </label>
        <div class="col-sm-4">
            @Html.DropDownListFor(p => p.MealDTO.TypeOfMealId, new SelectList(Model.TypeOfMealsDTO, "Id", "TypeName"), "--Wybierz typ posiłku--", new { @class = "form-control" })
            <span asp-validation-for="MealDTO.TypeOfMealId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MealDTO.Description" class="col-sm-2 col-form-label">
            Opis
        </label>
        <div class="col-sm-6">
            <textarea rows="5" asp-for="MealDTO.Description" class="form-control" placeholder="Podaj przepis na posiłek"></textarea>
            <span asp-validation-for="MealDTO.Description" class="text-danger"></span>
        </div>
    </div>
    <hr class="dashed">
    <div class="form-group row">
        <div class="form-group col">
            <label class="col-sm-12 col-form-label">
                Nazwa produktu
            </label>
            <div class="col-sm-12">
                <select id="productSelect" class="form-control">
                    <option id="0" value="0">-- Wybierz produkt --</option>
                    @foreach (var product in Model.ProductsDTO)
                    {
                        <option id="@product.Id" value="@product.Id">@product.ProductName</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group col">
            <label class="col-sm-12 col-form-label">
                Ilość (w gramach)
            </label>
            <div class="col-sm-12">
                <input id="quantity" class="form-control" placeholder="Ilość" />
            </div>
        </div>
        <div class="form-group col">
            <label class="col-sm-12 col-form-label">
            </label>
            <div class="col-sm-12">
                <input type="button" value="Dodaj produkt " id="add-row" class="btn btn-primary" />
            </div>
        </div>
    </div>
    <div id="productsTable" class="datatable" data-hover="true" data-border-color="dark ">
        <table class="table datatable-table">
            <thead class="datatable-header">
                <tr id="rowHeader">
                    <th>Produkt</th>
                    <th>Ilość</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="datatable-body">
            </tbody>
        </table>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Dodaj</button>
            <a asp-page="/Meals/Index" class="btn btn-danger">Anuluj</a>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="~/Pages/Shared/_ValidationScriptsPartial.cshtml" />
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#add-row").click(function () {
            var tabela = $('#productsTable tr');
            var wierszy = tabela.length;
            var indeks = wierszy - 1;
            var produkt = $('#productSelect option:selected').text();
            var produktId = $('#productSelect option:selected').val();
            var ilosc = $('#quantity').val();
            var markup = '<tr onclick="GetIndex(this)" class="productsRows"><td><input type="hidden" class="product" id="MealDTO_MealProducts_' + indeks + '__ProductId" value=' + produktId + ' name="MealDTO.MealProducts[' + indeks + '].ProductId"><label class="col-form-label">' + produkt + '</label></td><td><input class="quantity" type="hidden" value=' + ilosc + ' id="quantity' + indeks + '"__Quantity" name="MealDTO.MealProducts[' + indeks + '].Quantity"><label class="col-form-label">' + ilosc + '</label></td><td><button id=' + indeks + ' type="button" class="btn btn-danger delete-row"><i class="fa fa-close"></button></td></tr>';
            $('table tbody').append(markup);
            SetNull();
            HideShowSelected(produktId, false);
        });
    });

    $(document).on("click", ".delete-row", function (e) {
        e.preventDefault();
            var produktId = $('#MealDTO_MealProducts_' + index + '__ProductId').attr("value");
            var parentDiv = $(this).parent().parent();
            $(parentDiv).remove();
            var rows = $(".productsRows");
            for (var tr = 0; tr < rows.length; tr++) {
                var oneRow = rows[tr];
                var newProduct = 'MealDTO.MealProducts[' + tr + '].ProductId';
                var newIdProduct = 'MealDTO_MealProducts_' + tr + '__ProductId'
                $(oneRow).find('.product').attr({ "name": newProduct, "id": newIdProduct });
                var newQuantity = 'MealDTO.MealProducts[' + tr + '].Quantity';
                $(oneRow).find('.quantity').attr("name", newQuantity);
        };
            HideShowSelected(produktId, true);
            return false;
    });

    function GetIndex(x) {
        index = x.rowIndex - 1;
    }

    function HideShowSelected(produktId, hideShow) {
        if (hideShow) {
            $("#productSelect").children('#' + produktId).show();
        }
        else {
            $("#productSelect").children('#' + produktId).hide();
        }
    };

    function SetNull() {
        $("#productSelect").val('0');
        document.getElementById("quantity").value = "";
    }
</script>