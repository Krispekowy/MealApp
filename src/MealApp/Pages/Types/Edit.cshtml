@page "{id}"
@model MealApp.Pages.Types.EditModel
@{
}
<h1>Edytuj typ posiłku</h1>

<form method="post" class="mt-3">
    @*Use hidden input elements to store type id which
        we need when we submit the form*@
    <input hidden asp-for="TypeOfMealDTO.Id" />

    @*asp-for tag helper takes care of displaying the existing
        data in the respective input elements*@
    <div class="form-group row">
        <label asp-for="TypeOfMealDTO.TypeName" class="col-sm-1 col-form-label">
            Nazwa
        </label>
        <div class="col-sm-5">
            <input asp-for="TypeOfMealDTO.TypeName" class="form-control" placeholder="Podaj nazwę typu posiłku">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Aktualizuj</button>
            <a asp-page="/Types/Index" class="btn btn-danger">Wróć</a>
        </div>
    </div>
</form>